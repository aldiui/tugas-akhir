# Aktifkan mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect semua permintaan dengan header X-Robots-Tag untuk mencegah pengindeksan
    <IfModule mod_headers.c>
        Header set X-Robots-Tag "noindex, nofollow"
    </IfModule>

    # Blokir mesin pencari tertentu (opsional)
    RewriteCond %{HTTP_USER_AGENT} (Googlebot|bingbot|Slurp|DuckDuckBot) [NC]
    RewriteRule .* - [F,L]

    # Blokir referer yang tidak valid
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?mybahana.com [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Nonaktifkan Directory Listing
Options -Indexes

# Blokir akses ke file sensitif
<FilesMatch "(^\.htaccess|\.env|\.htpasswd)">
    Require all denied
</FilesMatch>

# Cache Control untuk meningkatkan performa (opsional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 day"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
